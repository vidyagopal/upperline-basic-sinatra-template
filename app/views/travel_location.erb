 <div id="travel_location">
 <% if @location == "Miami" %>
    <center><h1><b>Miami</b></h1></center>
     <% sights = miami %>
     <% sights.each do |place, description| %>
     <ul>
         <li><b><%= place %></b>: <dd> <%=description%></dd></li>
     </ul>
